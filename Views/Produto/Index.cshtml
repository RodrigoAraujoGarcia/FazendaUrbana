@model IEnumerable<FazendaUrbana.Models.ProdutoModel>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Nome)</th>
            <th>@Html.DisplayNameFor(model => model.First().Preco)</th>
            <th>@Html.DisplayNameFor(model => model.First().Categoria)</th>
            <th>@Html.DisplayNameFor(model => model.First().Descricao)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Preco)</td>
                <td>@Html.DisplayFor(modelItem => item.Categoria)</td>
                <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Detalhe</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger" 
                            onclick="return confirm('Are you sure you want to delete this item?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
         <button class="btn" style="background-color: green; color: white;" onclick="location.href='@Url.Action("Create", "Produto")';">Colocar um Produto</button>
    </tbody>
</table>

