@model FazendaUrbana.Models.ShoppingCart
<h2>Meu Carrinho</h2>

@if (Model.Items.Any())
{
    <table>
        <tr>
            <th>Nome</th>
            <th>Preço</th>
            <th>Quantidade</th>
            <th>Ações</th>
        </tr>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Preco.ToString("C")</td>
                <td>@item.Quantidade</td>
                <td>
                    <a asp-action="RemoveFromCart" asp-route-id="@item.ProdutoId">Remover</a>
                </td>
            </tr>
        }
    </table>
    <h3>Total: @Model.Total.ToString("C")</h3>
    
    <form asp-action="FinalizePurchase" method="post">
        <label for="endereco">Endereço de Entrega:</label>
        <input type="text" id="endereco" name="endereco" required />
        <button type="submit">Finalizar Compra</button>
    </form>
}
else
{
    <p>Seu carrinho está vazio.</p>
}